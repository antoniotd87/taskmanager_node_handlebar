<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>
                Editar Actividad
            </h3>
        </div>
        <div class="card-body">
            <form action="/activities/edit-activity/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="mt-3">
                    <input type="text" name="title" class="form-control" placeholder="Titulo" value="{{note.title}}" required>
                </div>
                <div class="mt-3">
                    <textarea name="description" class="form-control" required>{{note.description}}
                    </textarea>
                </div>
                <div class="mt-3">
                    <input type="date" name="calendar_start" class="form-control" required value="{{calendar_start}}">
                </div>
                <div class="mt-3">
                    <input type="date" name="calendar_finish" class="form-control" required value="{{calendar_finish}}">
                </div>
                <div class="mt-3">
                    <button class="btn btn-primary w-100" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>