<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/activities/edit/{{_id}}"><i class="fas fa-edit"></i></i></a>
                </h4>
                <p>{{description}}</p>
                <!--<p>Duracion: {{time}}</p> -->
                <p>Fecha inicio: {{calendar_start}}</p>
                <p>Fecha finish: {{calendar_finish}}</p>
                <p>Falta </p>
                <div class="d-flex justify-content-between">
                    <a href="/activities/{{url}}" class="btn btn-success btn-sm">Ver Proyecto</i></a>
                    <form action="/activities/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-sm" type="submit">
                            Borrar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card col-3">
        <div class="card-body">
            <h1>Hola {{user.name}}</h1>
            <p class="lead">No hay pendientes aun</p>
            <a href="/activities/add" class="btn btn-success w-100">Crea una tarea</a>
        </div>
    </div>
    {{/each}}
</div>